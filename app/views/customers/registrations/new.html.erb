<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    氏名　　  ：　
    <%= f.label "姓　　" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    <%= f.label "名　　" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

　<div class="field">
    氏名(カナ)：　
    <%= f.label "姓(カナ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    <%= f.label "名(カナ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>

  <div class="field">
    メールアドレス：　　　
    <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    パスワード：　　　　　
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上の英数字)</em>
    <% end %>
  </div>

  <div class="field">
    パスワード(確認)：　　
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
